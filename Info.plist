<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <!-- App Identity -->
    <key>CFBundleDisplayName</key>
    <string>WebKurier</string>

    <!-- MediaCleaner / Photos access (MANDATORY) -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>WebKurier analyzes your photo library metadata to detect duplicates and free space. No photos are uploaded.</string>

    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>WebKurier may save optimized versions of your media after your approval.</string>

    <!-- Microphone (Voice / Calls / Translation) -->
    <key>NSMicrophoneUsageDescription</key>
    <string>WebKurier uses the microphone for voice calls, translation, and lessons.</string>

    <!-- Camera (OCR / Document translation) -->
    <key>NSCameraUsageDescription</key>
    <string>WebKurier uses the camera to scan documents and text for translation.</string>

    <!-- Network -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
    </dict>

</dict>
</plist>